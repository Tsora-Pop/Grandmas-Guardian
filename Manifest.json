{
  "manifest_version": 3,
  "name": "Dynamic Allow List Extension",
  "version": "1.2",
  "description": "Allows access to domains specified in a text file.",
  "permissions": ["declarativeNetRequest", "storage", "topSites"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["blockpage.html", "blockpage.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scamBanner.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
