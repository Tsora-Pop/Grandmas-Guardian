{
  "manifest_version": 3,
  "name": "Domain Allow List Extension",
  "version": "1.1",
  "description": "Allows access only to microsoft.com and google.com",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "allowlist",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
  